{
    "SaharaClusters.create_and_delete_cluster": [
        {
            "args": {
                "flavor": {
                    "name": "m1.medium"
                },
                "workers_count": {{ compute * 2 }},
                "plugin_name": "vanilla",
                "hadoop_version": "2.4.1",
                "auto_security_group": true
            },
            "runner": {
                "type": "constant",
                "times": 1,
                "timeout": 3600,
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                },
                "sahara_image": {
                    "image_url": "http://172.16.44.5/sahara-juno-vanilla-2.4.1-ubuntu-14.04.qcow2",
                    "username": "ubuntu",
                    "plugin_name": "vanilla",
                    "hadoop_version": "2.4.1"
                },
                "quotas": {
                    "nova": {
                        "instances": -1,
                        "cores": -1,
                        "ram": -1,
                        "floating_ips": -1,
                        "security_groups": -1,
                        "security_group_rules": -1
                    },
                    "neutron": {
                        "network": -1,
                        "subnet": -1,
                        "port": -1,
                        "floatingip": -1,
                        "security_group": -1,
                        "security_group_rule": -1
                    }
                },
                "network": {}
            },
            "sla": {"failure_rate": {"max": 0}}
        }
    ]
}
